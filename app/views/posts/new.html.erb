<h1> メモページ </h1>
<%= form_with url: "/posts", method: :post, local: true do |form| %>
  <%= form.text_field :memo %>
  <%= form.submit 'メモを保存する' %>
<% end %>
<% @posts.each do |post| %>
  <div class ="post">
    <div class="post.created_at">
      ＜メモ日時:<%= l post.created_at %>＞
    </div>
    <div class="post-content">
      <%= post.memo%>
    </div>
  </div>
<% end %>